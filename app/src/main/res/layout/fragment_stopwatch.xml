<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.animal.harness.hodoo.hodooharness.view.StopWatch
        android:id="@+id/stop_watch"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/stop_watch_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="200dp"
            android:alpha="0"
            android:id="@+id/stop_watch_reset"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="초기화"
            android:background="#aaaaaa"
            android:visibility="gone"/>
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/stop_watch_start"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="시작"
            android:background="@drawable/stop_watch_btn"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>