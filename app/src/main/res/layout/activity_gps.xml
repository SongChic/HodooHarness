<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="com.animal.harness.hodoo.hodooharness.activity.gps.GPSActivity"/>
        <variable
            name="gps"
            type="com.animal.harness.hodoo.hodooharness.domain.GPSData"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/gps_monitor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gps_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{"lon : " + Double.toString(gps.lon)}'/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{"lat : "  + Double.toString(gps.lat)}'/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_above="@+id/btn_wrap"
            android:layout_below="@+id/gps_monitor"
            android:id="@+id/data_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:id="@+id/btn_wrap"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/start"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작"
                android:onClick="@{activity::onClick}"
                />
            <Button
                android:id="@+id/stop"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중지"
                android:onClick="@{activity::onClick}"
                />
            <Button
                android:id="@+id/reset"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="초기화"
                android:onClick="@{activity::onClick}"
                />
            <Button
                android:id="@+id/view_data"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보기"
                android:onClick="@{activity::onClick}"
                />
            <Button
                android:id="@+id/move"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이동"
                android:onClick="@{activity::onClick}"
                />

        </LinearLayout>

    </RelativeLayout>
</layout>